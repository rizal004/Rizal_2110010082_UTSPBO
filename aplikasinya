    private void tglPropertyChange(java.beans.PropertyChangeEvent evt) {                                   
    if(tgl.getDate()!=null){
       SimpleDateFormat format=new SimpleDateFormat("yyyy-MM-dd");
       tgl_hari=format.format(tgl.getDate());
     }   
    }                                  

    private void bt_simpanActionPerformed(java.awt.event.ActionEvent evt) {                                          
      try{
          String sql = "insert into tbalamat values('"//simpan data pada tabel 'tbalamat'
                  +no.getText()+"','"
                  +nama.getText()+"','"
                  +gender.getSelectedItem()+"','"
                  +tempat.getText()+"','"
                  +tgl_hari+"','"
                  +alamat.getText()+"','"
                  +telpon.getText()+"')";
          java.sql.Connection conn = (java.sql.Connection)project.Koneksi.koneksiDB();// Mendapatkan koneksi ke database
          java.sql.PreparedStatement pst = conn.prepareStatement(sql);// Membuat objek PreparedStatement untuk mengeksekusi pernyataan SQL
                pst.execute();
                JOptionPane.showMessageDialog(null, "Berhasil di simpan");// Menampilkan pesan bahwa data berhasil disimpan
                tampil_data();// Memanggil fungsi tampil_data() untuk memperbarui tampilan data
      }
      catch(Exception e){
          JOptionPane.showMessageDialog(null, "gagal disimpan");// Menampilkan pesan bahwa data gagal disimpan
          System.out.println(e.getMessage());// Menampilkan informasi kesalahan pada konsol
      }
    }                                         

    private void bt_batalActionPerformed(java.awt.event.ActionEvent evt) {                                         
        System.exit(0);
    }                                        

    private void tb_editActionPerformed(java.awt.event.ActionEvent evt) {                                        
        try{
            java.sql.Connection conn = (java.sql.Connection)project.Koneksi.koneksiDB();
            String sql = "update tbalamat set nama='" + nama.getText()+//melakukan update data pada tabel 'tbalamat' 
            "', gender='"+gender.getSelectedItem()+
            "', tempat='"+tempat.getText()+
            "', tgl='"+tgl_hari+ 
            "', alamat='"+alamat.getText()+      
            "', telpon='"+telpon.getText()+
            "' where no='"+no.getText()+"'";
            java.sql.PreparedStatement pst = conn.prepareStatement(sql);
                pst.execute();// Menjalankan pernyataan SQL untuk melakukan update data dalam database
                JOptionPane.showMessageDialog(null, "Berhasil di edit");// Menampilkan pesan bahwa data berhasil diedit
                tampil_data();// Memanggil fungsi tampil_data() untuk memperbarui tampilan data
        }
            catch(Exception e){
            JOptionPane.showMessageDialog(null, "gagal diedit");// Menampilkan pesan kesalahan jika gagal diedit
            System.out.println(e.getMessage());
        }

    }                                       

    private void tb_hapusActionPerformed(java.awt.event.ActionEvent evt) {                                         
        try{
    java.sql.Connection conn=(java.sql.Connection)project.Koneksi.koneksiDB();
    String sql = "delete from tbalamat where no='"+no.getText()+"' ";// Membuat pernyataan untuk menghapus data berdasarkan nilai dari komponen 'no'
    java.sql.PreparedStatement pst = conn.prepareStatement(sql);
    pst.executeUpdate(); // Menjalankan pernyataan SQL untuk menghapus data dari database
    JOptionPane.showMessageDialog(null,"Data berhasil di hapus");// Menampilkan pesan bahwa data berhasil dihapus
    tampil_data();
    }
    catch (Exception e){
    JOptionPane.showMessageDialog(null,"Proses Penghapusan Gagal");// Menampilkan pesan kesalahan jika proses penghapusan gagal
    System.out.println(e.getMessage());
    }   

    }                                        

